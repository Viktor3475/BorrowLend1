@model IEnumerable<BorrowLend.Models.Item>
<div class="container p-3">
    <div class="col-6">
        <h2 class=" =" text-primary>
            Borrowed items lsit
        </h2>
    </div>
</div>
<br />

<div class="col-6 text-right float-right">
    <a class="btn btn-primary w-35" asp-controller="Item" asp-action="Create">Create new item</a>
</div>

@if (Model.Count() > 0)
{

                <table class="tablee table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th> Item name </th>
                            <th> Borrower </th>
                            <th> Lender </th>
                            <th>Changes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.ItemName</td>
                            <td>@item.Borrower</td>
                            <td>@item.Lender</td>
                            <td width="25%">
                                <a class="btn btn-success m-1" asp-controller="Item" asp-action="Update" asp-route-id=@item.Id>Update</a>
                                <form method="post">
                                <a class="btn btn-danger m-1" asp-controller="Item" asp-action="Delete" asp-route-id=@item.Id>Delete</a>

                                </form>

                            </td>
                        </tr>}


                    </tbody>
                </table>            }