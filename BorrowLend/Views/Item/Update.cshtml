@model BorrowLend.Models.Item
@{
    ViewData["Title"] = "Update";
}
<h1>Update</h1>
<form method="post" asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col=12">
            <div class="form-group row">
                <label class="col-3-m-1 form-control" asp-for="ItemName"></label>
                <label class="col-3-m-1 form-control" asp-for="Borrower"></label>
                <label class="col-3-m-1 form-control" asp-for="Lender"></label>
            </div>
            <div class="form-group row">
                <input class="col-3 form-control m-1" asp-for="ItemName" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
                <input class="col-3 form-control m-1" asp-for="Borrower" />
                <span asp-validation-for="Borrower" class="text-danger"></span>
                <input class="col-3 form-control m-1" asp-for="Lender" />
                <span asp-validation-for="Lender" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3 form-control m-1"></div>
                <button type="submit" class="col-3 btn btn-success m-1">Save</button>
                <button asp-action="Index" class="col-3 btn btn-danger m-1">Back</button>
            </div>

        </div>
    </div>
</form>